---
import type { SKillsInterface } from "../../types/SkillsInterface";

const { skills } = Astro.props;
---

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-5 gap-4 w-full">
  {
    skills.map(({ id, items }: SKillsInterface) => (
      <div class="border p-4">
        <h3 class="text-lg capitalize mb-4">{id}</h3>
        <div class="flex flex-col gap-2">
          {items.map((skill) => (
            <div class="uppercase tracking-widest bg-dark text-white dark:bg-white dark:text-dark py-2 px-4 flex items-center justify-center text-xs">
              {skill}
            </div>
          ))}
        </div>
      </div>
    ))
  }
</div>
